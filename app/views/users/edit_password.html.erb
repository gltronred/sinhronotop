<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => update_password_path do |f| -%>
<p><%= f.label :password, "Новый пароль (минимум 6 символов)" %><br/>
<%= f.password_field :password %></p>

<p><%= f.label :password_confirmation, 'Новый пароль еще раз' %><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag 'Сохранить' %></p>
<% end -%>
<%= link_to_function 'Назад', 'history.back()' %>