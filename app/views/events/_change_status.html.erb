<% if !event.new_record? && is_org?(event.game.tournament) %>
<% field_id = "change_event_status_#{event.id}"%>
<%= collection_select( :event, :event_status, EventStatus.all, :id, :name,  {:selected => event.event_status.id }, {:id => field_id}) %>
<%= observe_field field_id, :url => "../../events/change_status/#{event.id}", :with => "new_status_id"  %>
<% end %>