<% form_for(@event) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :game_id, :value => @event.game.id %>
  <p>
    <%= f.label "Город" %><br />
    <%= collection_select(:event, :city_id, @cities, :id, :name) %> 
  </p>
  <p>
    <%= f.label "Дата игры" %><br />
    <%= f.date_select :date %>
  </p>
  <p>
    <%= f.label "Ведущий" %><br />
    <%= f.text_field :moderator_name %>
  </p>
  <p>
    <%= f.label "email ведущего" %><br />
    <%= f.text_field :moderator_email %>
  </p>
  <p>
    <%= f.label "Ответственный" %><br />
    <%= f.label current_user.name %><br />
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </p>
  <p>
    <%= f.submit 'Сохранить' %>
  </p>
<% end %>