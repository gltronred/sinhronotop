<%= render :partial => "how_to_import" %>

<% for tour in 1..@event.game.num_tours %>
<h3>Тур <%= tour %></h3>
<table>
  <tr>
    <th>Команда</th> 
<% for question_in_tour in 1..@event.game.num_questions %>
<th><%= (tour-1)*@event.game.num_questions+question_in_tour %></th>
<% end %>
    <th>Сумма</th>
  </tr>

<% @results.each do |result| %>
  <tr>
    <td><%= result.team.name %></td>
<% for item in result.items_for_tour_sorted(tour) %>
    <td>
<% field_id = "team#{result.team.id}_tour#{tour}_question#{item.question_index}" %>
<%= check_box_tag field_id, 1, item.score==1 %>
<%= observe_field field_id, :url => "../../resultitems/update/#{item.id}", :with => "checked"  %>
    </td>
<% end %>
<%= render :partial => "tour_result", :locals => {:result => result, :tour => tour, :suffix => 'tour'} %>
  </tr>
<% end %>
</table>
<a href="#dialog" name="modal" num_questions=<%= @event.game.num_questions %> tour="<%= tour %>" teams="<%= @results.map{|result| result.team.id.to_s}.join(',') %>">Импорт тура из Excel</a>

<% end %>

<!--http://www.queness.com/post/77/simple-jquery-modal-window-tutorial-->
<div id="boxes">
<div id="dialog" class="window">Импорт тура из Excel | 
<a href="#" class="import">Импортировать</a>
<a href="#" class="close">Закрыть</a>
<textarea id='excel_input'></textarea>
</div>
  <div id="mask"></div>
</div>

<div id='add_team'>
<div id='add_team_new'>
<%= render :partial => "newteam" %>
</div>
<div id='add_team_listed'>
<%= render :partial => "listedteams" %>
</div>
</div>
