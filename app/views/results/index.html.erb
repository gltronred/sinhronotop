<table id="result_table">
  <tr>
    <th>Команда</th>
    <th>Очков</th>
  </tr>

<% changeable = can_submit_results? @event %>
<% @results.each do |result| %>
  <tr>
    <td><%=h result.team.name %></td>
    <td id='team<%=result.team.id%>'><%=h result.score %></td>
<% if changeable %>
    <td><%= link_to 'Удалить', result, :confirm => 'Вы уверены?', :method => :delete %></td>
<% end %>
  </tr>
<% end %>
</table>

<br />


<% if changeable %>
<%= render :partial => "event" %>
<%= link_to 'Готово, все результаты введены', home_path %>
<% elsif @game %>
<%= render :partial => "game" %>
<% end %>