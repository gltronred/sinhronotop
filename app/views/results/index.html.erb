<h1>Результаты / <%= link_to @parent.to_s, @parent %></h1>

<table>
  <tr>
    <th>Команда</th>
    <th>Очков</th>
  </tr>

<% changeable = !@event.nil? && @game.disp_changeable %>
<% @results.each do |result| %>
  <tr>
    <td><%=h result.team.name %></td>
    <td id='team<%=result.team.id%>'><%=h result.score %></td>
<% if changeable %>
    <td><%= link_to 'Удалить', result, :confirm => 'Вы уверены?', :method => :delete %></td>
<% end %>
  </tr>
<% end %>
</table>

<br />


<% if changeable %>
<%= render :partial => "event" %>
<% elsif !@game.nil? %>
<%= render :partial => "game" %>
<% end %>